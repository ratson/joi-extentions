{
  "private": true,
  "name": "joi-extentions",
  "scripts": {
    "lint": "eslint --ext js,md .",
    "test": "jest"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-concise": "^0.32.0",
    "eslint-config-concise-jest": "^0.32.0",
    "faker": "^4.1.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "joi": "^14.0.1",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3",
    "prettier-eslint-cli": "^4.7.1"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "*.md",
    "index.js"
  ],
  "keywords": [
    "joi",
    "extension",
    "mongodb",
    "objectid",
    "bson"
  ],
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "jest"
    }
  }
}
